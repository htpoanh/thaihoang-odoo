<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_gift_item_tree" model="ir.ui.view">
        <field name="name">gift.item.tree</field>
        <field name="model">gift.item</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="points_required"/>
                <field name="available_qty"/>
            </tree>
        </field>
        <field name="type">tree</field>
    </record>

    <record id="view_gift_item_form" model="ir.ui.view">
        <field name="name">gift.item.form</field>
        <field name="model">gift.item</field>
        <field name="arch" type="xml">
            <form string="Gift Item">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="points_required"/>
                        <field name="available_qty"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
        <field name="type">form</field>
    </record>
</odoo>
