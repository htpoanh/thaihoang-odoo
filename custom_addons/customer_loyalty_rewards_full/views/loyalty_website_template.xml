<odoo>
  <template id="website_loyalty_page" name="Loyalty Page" page="true">
    <t t-call="website.layout">
      <div class="container my-5">
        <h2>Chương Trình Tích Điểm</h2>
        <p>Chào <t t-esc="partner.name"/>! Bạn đang có <strong><t t-esc="points.points or 0"/></strong> điểm.</p>
        <hr/>
        <h4>🎁 Phần Thưởng</h4>
        <ul>
          <t t-foreach="rewards" t-as="reward">
            <li><t t-esc="reward.name"/> - <t t-esc="reward.points_cost"/> điểm</li>
          </t>
        </ul>
        <hr/>
        <h4>📜 Lịch Sử Giao Dịch</h4>
        <ul>
          <t t-foreach="history" t-as="line">
            <li>
              <t t-esc="line.date"/>:
              <t t-if="line.type == 'earn'">+<t t-esc="line.points"/></t>
              <t t-if="line.type == 'redeem'">-<t t-esc="line.points"/></t>
              (<t t-esc="line.type"/>)
            </li>
          </t>
        </ul>
      </div>
    </t>
  </template>
</odoo>